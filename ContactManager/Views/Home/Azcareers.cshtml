@model IEnumerable<ContactManager.Models.Career>
@{
    ViewBag.Title = "Azcareers";
}

<!--The following content was taken from this website view-source:http://www.mypathcareers.org/careers 24/11/2014 -->
<div class="row">
    <div class="col-sm-12">
        <div align="center">
            <h2>A-Z Careers</h2>
        </div>
    </div>
    @foreach (ContactManager.Models.Career item in Model)
    {
        <div class="col-sm-4">
            <span><a href="@Url.Action("Career", new { id = item.ID })">@item.Name</a></span>
            <p>@item.Description</p>
        </div>
    }
    <div class="col-sm-4">
        <h3>A</h3>
        <span><a href="#">Accountants and auditors</a></span>
        <p>Accountants and auditors work with financial information. They gather data, make sure it's accurate, study it, and create reports. The four major accounting fields are public, management, government and internal auditing.</p>
    </div>
    <div class="col-sm-4">
        <h3>B</h3>
        <span><a href="#">Broadcast technicians</a></span>
        <p>Broadcast technicians record and broadcast radio and television programs. They work with electrical equipment, adjusting the picture and sound of the broadcast to ensure clarity for viewers.</p>
    </div>
    <div class="col-sm-4">
        <h3>C</h3>
        <span><a href="#">Computer programmers</a></span>
        <p>Computer programmers create and test computer programs that store, find or retrieve data and documents.</p>
    </div>
</div><!-- class row one-->
